<?xml version="1.0" encoding="utf-8" ?>
<pages:BaseContentPage xmlns:pages="clr-namespace:TeamConnect.Views"
                       xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:viewmodels="clr-namespace:TeamConnect.ViewModels" 
                       xmlns:xct="http://xamarin.com/schemas/2020/toolkit" 
                       xmlns:controls="clr-namespace:TeamConnect.Controls"
                       x:Class="TeamConnect.Views.SelectLocationPage"
                       x:DataType="viewmodels:SelectLocationPageViewModel"
                       BackgroundColor="{DynamicResource tcolor_i3}"
                       Title="{xct:Translate SelectAddress}">

    <StackLayout Spacing="0">

        <controls:CustomEntry Style="{DynamicResource estyle_i1}"
                              Placeholder="{xct:Translate Address}"
                              Text="{Binding Address}"
                              Margin="24"/>

        <controls:CustomMap IsShowingUser="True"
                            Pin="{Binding Pin}">

            <controls:CustomMap.Behaviors>

                <xct:EventToCommandBehavior EventName="MapClicked"
                                            Command="{Binding SelectLocationCommand}"/>

            </controls:CustomMap.Behaviors>
            
        </controls:CustomMap>

    </StackLayout>

</pages:BaseContentPage>